<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preview"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".registrationFragments.WelcomeFragment">


    <ImageView
        android:layout_width="199dp"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-37dp"
        android:src="@drawable/background_elements" />

    <ImageView
        android:layout_width="186dp"
        android:layout_height="161dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-37dp"
        android:layout_marginEnd="-41dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/background_elements2" />

    <TextView
        android:id="@+id/dovery"
        android:layout_width="329dp"
        android:layout_height="151dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="77dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Dovery"
        style="@style/TextStyle"
        android:textSize="48dp" />

    <ImageView
        android:id="@+id/preview_image"
        android:layout_width="329dp"
        android:layout_height="292dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/preview_image" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="541dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/preview"
        style="@style/TextStyle"
        android:textSize="18dp" />

    <com.example.myhouseholdorganaiser.view.MyButton
        android:id="@+id/next"
        android:layout_width="188dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="638dp"
        android:elevation="4dp"
        android:translationZ="5dp"
        android:fontFamily="@font/title_font"
        app:text="Начать"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp" />


</RelativeLayout>